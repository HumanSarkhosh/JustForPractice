<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--My Dark theme-->
    <style name="AppDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryAppDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAppDark</item>
        <item name="colorAccent">@color/colorAccentAppDark</item>
        <item name="recyclerViewStyle">@style/AppDark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/navigationBarColorAppDark</item>
    </style>

    <style name="AppDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>